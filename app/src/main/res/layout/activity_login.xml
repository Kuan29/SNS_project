<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_in_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="1">
    <LinearLayout
        android:id="@+id/loginlayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center|top"
        android:orientation="horizontal">
        <TextView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한국어(대한민국)"/>
        <ImageView
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_keyboard_arrow_down_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight=".45"
        android:layout_below="@+id/loginlayout1"
        android:layout_width="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/siginin_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logos_instagram"/>

        <EditText
            android:id="@+id/loginID"
            android:background="@drawable/edittextbox"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="  아이디,이메일 주소 또는 사용자이름"/>


        <EditText
            android:id="@+id/loginPw"
            android:background="@drawable/edittextbox"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="  비밀번호"/>

        <Button
            android:id="@+id/loginBtn"
            android:backgroundTint="#99ccff"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="로그인"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/loginwarning"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디와 비밀번호가 빈칸입니다."
            android:textColor="@color/warning"
            android:visibility="invisible"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 상세 정보를 잊으셨나요?"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 도움말 보기."
                android:textSize="13dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom|center"
        android:layout_weight=".3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80808080"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정이 없으신가요?"
                android:textSize="12dp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가입하기."
                android:textSize="13dp"
                android:textStyle="bold"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
