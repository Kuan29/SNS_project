<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/signup2_back"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.39"/>

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 만들기"
            android:textStyle="bold"
            android:textSize="27dp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.59"/>
    </LinearLayout>


    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보안을 위해 비밀번호는 6자 이상이어야 합니다."
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/signup2_pw"
        android:background="@drawable/edittextbox"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="  비밀번호"/>
    <CheckBox

        android:id="@+id/signup2_pw_toggle"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 저장"/>

    <TextView
        android:id="@+id/signup2_pw_err"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 이름 을 사용할 수 없습니다."
        android:textColor="@color/warning"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:visibility="gone"/>



    <Button
        android:id="@+id/signup2_btn"
        android:backgroundTint="#99ccff"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="다음"
        android:textColor="#ffffff"/>

</LinearLayout>